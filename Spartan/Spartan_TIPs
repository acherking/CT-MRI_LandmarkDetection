sinteractive -p gpu-a100 --gres=gpu:1 -A ***
# sinteractive -p gpu-a100 --gres=gpu:1 --mem=30G --time=(01:30:00?)
sinteractive -p gpu-a100 --gres=gpu:1 --mem=50G --time=02:30:00

-p: partition
--gres: generic resources
-A: account group, e.g.punim0006
--time 00:05:00


